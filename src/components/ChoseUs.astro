---
import { Image } from "astro:assets";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

import experticeImage from "@/assets/chose us/expertice.png";
import solutionImage from "@/assets/chose us/solution.png";
import inovationImage from "@/assets/chose us/inovation.png";
import performanceImage from "@/assets/chose us/performace.png";
import landingBg from "@/assets/img/landing bg.png";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class='px-4 md:py-24 py-12'>
  <div class='grid lg:grid-cols-4 grid-cols-2 container mx-auto md:gap-24 gap-8'>
    <div class='lg:col-span-4 col-span-2 md:text-5xl text-xl'>
      {t("choseUs1")}
      <br />
      {t("choseUs2")}
    </div>
    <div class='flex flex-col gap-4'>
      <Image height={144} width={144} src={experticeImage} class='max-w-36 self-center' alt='Experience' />
      <p class='text-lg md:text-2xl'>{t("experience")}</p>
      <p class='text-justify max-md:text-xs'>{t("experienceDetail")}</p>
    </div>
    <div class='flex flex-col gap-4'>
      <Image height={144} width={144} src={inovationImage} class='max-w-36 self-center' alt='Inovation' />
      <p class='text-lg md:text-2xl'>{t("inovation")}</p>
      <p class='text-justify max-md:text-xs'>{t("inovationDetail")}</p>
    </div>
    <div class='flex flex-col gap-4'>
      <Image height={144} width={144} src={solutionImage} class='max-w-36 self-center' alt='Solution' />
      <p class='text-lg md:text-2xl'>{t("solution")}</p>
      <p class='text-justify max-md:text-xs'>{t("solutionDetail")}</p>
    </div>
    <div class='flex flex-col gap-4'>
      <Image height={144} width={144} src={performanceImage} class='max-w-36 self-center' alt='Performance' />
      <p class='text-lg md:text-2xl'>{t("performance")}</p>
      <p class='text-justify max-md:text-xs'>{t("performanceDetail")}</p>
    </div>
  </div>
</div>
<div>
  <div class='bg-cover bg-center bg-no-repeat text-white flex items-center px-4 md:py-32 py-12 relative overflow-hidden'>
    <Image src={landingBg} width={1440} height={444} alt={"Landing"} class='absolute top-0 right-0 w-full h-full -z-10 object-cover' />
    <div class='grid grid-cols-12 container mx-auto'>
      <p class='md:text-5xl opacity-100 text-sm col-span-7'>
        {t("heroHome2")}
      </p>
    </div>
  </div>
</div>
