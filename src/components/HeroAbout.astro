---
import { Image } from "astro:assets";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

import bgBintang from "@/assets/img/abt bintang bg (1).png";
import MoonModel from "./MoonModel";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class='md:pt-48 pt-24 md:pb-24 pb-8 md:px-4'>
  <div class='container mx-auto grid grid-cols-3'>
    <h1 class='md:text-5xl text-xl max-md:w-24'>{t("nav.about")}</h1>
    <p class='col-span-2 md:text-lg text-justify text-sm'>{t("aboutUsDetail")}</p>
  </div>
</div>
<div class='md:px-4 relative mb-24 md:mb-36'>
  <Image
    src={bgBintang}
    width={1440}
    height={834}
    alt={"Landing"}
    class='absolute md:top-36 top-24 right-0 w-full h-full -z-10 object-cover object-top rounded-t-[5vw]'
  />
  <div class='sticky top-24 md:-mb-64 -mb-36'>
    <MoonModel client:load />
  </div>
  <div class='container mx-auto md:pt-56 pt-36 z-10 relative'>
    <div class='grid max-md:grid-cols-10 grid-cols-2 text-white'>
      <div class='max-md:col-span-7'>
        <h2 class='md:text-5xl text-xl'>{t("ourVision")}</h2>
        <p class='md:text-2xl md:mt-8 mt-2 text-justify text-sm'>{t("ourVisionDetail")}</p>
      </div>
      <div class='max-md:col-span-3'></div>
      <div class='max-md:col-span-3'></div>
      <div class='md:mt-12 mt-8 max-md:col-span-7'>
        <h2 class='md:text-5xl text-xl'>{t("ourMision")}</h2>
        <p class='md:text-2xl md:mt-8 mt-2 text-justify text-sm'>{t("ourMisionDetail")}</p>
      </div>
    </div>
  </div>
</div>
